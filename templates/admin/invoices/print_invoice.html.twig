                                        <td class="border-0 font-14 pr-4"><b>{{invoice.amountNetToPaid|number_format(2, '.', ' ')}} XAF</b></td>
                                    </tr>

                                    <tr>
                                        <th colspan="4" class="border-0"></th>
                                        <td class="border-0 font-14 text-right "><b>Avance :</b></td>
