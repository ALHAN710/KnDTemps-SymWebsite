                                        {# <td>{{invoiceItem.reference}}</td> #}
                                        <td>{{invoiceItem.designation}}</td>
                                        <td class="text-center">{{invoiceItem.pu}}</td>
                                        <td class="text-center">{{invoiceItem.quantity}}</td>
                                        <td class="text-center">{{(invoiceItem.quantity * invoiceItem.pu)|number_format(2, '.', ' ')}}</td>
                                        <td class="text-center">{{invoiceItem.remise}}</td>
                                        <td class="text-center">
