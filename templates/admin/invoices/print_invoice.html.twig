                                        {#<td class="border-0 font-14"><b>{{invoice.amountReduction}} XAF</b></td>#}
                                    </tr>

                                    <tr>
                                        <th colspan="3" class="border-0"></th>
                                        <td colspan="2" class="border-0 font-14 text-right "><b>Montant Net HT :</b></td>
                                        <td class="border-0 font-14 text-left pr-4"><b>{{invoice.TotalAmountNetHT|number_format(2, '.', ' ')}} XAF</b></td>
                                        {#<td class="border-0 font-14"><b>{{promoAmount}} XAF</b></td>#}
                                    </tr>

                                    <tr>
                                        <th colspan="4" class="border-0"></th>
                                        <td class="border-0 font-14 text-right "><b>Taxes{#( {{app.user.enterprise.tva}}% )#} :</b></td>
                                        <td class="border-0 font-14 text-left pr-4"><b>{{invoice.Taxes|number_format(2, '.', ' ')}} XAF</b></td>
                                        {#<td class="border-0 font-14"><b>{{promoAmount}} XAF</b></td>#}
                                    </tr>

                                    <tr>
                                        <th colspan="3" class="border-0"></th>
                                        <td colspan="2" class="border-0 font-14 text-right "><b>Montant TTC :</b></td>
                                        <td class="border-0 font-14 text-left pr-4"><b>{{invoice.AmountTTC|number_format(2, '.', ' ')}} XAF</b></td>
