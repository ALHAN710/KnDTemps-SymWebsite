                                        <td class="border-0 font-14 text-left pr-4"><b>{{invoice.amountRestToPaid|number_format(2, '.', ' ')}} XAF</b></td>
                                        {#<td class="border-0 font-14"><b>{{promoAmount}} XAF</b></td>#}
                                    </tr>
                                    <tr>
                                        <th colspan="6" class="border-0">Mode de Paiement : {{invoice.paymentMode}}</th>
                                    </tr>
                                    {# <tr>
                                        <th colspan="6" class="border-0">Mode de Livraison : {{invoice.deliveryMode}}</th>
                                    </tr> #}
